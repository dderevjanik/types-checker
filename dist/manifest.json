{
  "manifest_version": 2,
  "name": "Types Checker",
  "devtools_page": "devtools.html",
  "description": "Check if packages has Typescript types",
  "icons": {
    "128": "icon_dark_128.png",
    "48": "icon_dark_48.png",
    "16": "icon_dark_16.png"
  },
  "web_accessible_resources": ["resources/*"],
  "version": "1.0",
  "author": "Daniel Derevjanik <daniel.derevjanik@gmail.com>",
  "offline_enabled": true,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "runt_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "128": "icon_dark_128.png",
      "48": "icon_dark_48.png",
      "16": "icon_dark_16.png"
    }
  },
  "background": {
    "persistant": false,
    "scripts": ["background.js"]
  },
  "permissions": ["tabs", "activeTab", "windows", "storage", "webRequest", "<all_urls>"],
  "web_accessible_resources": ["inject-script.js"]
}
